<h2>Lista de Postagens</h2>
<hr />
<a href="/admin/posts/add">
  <button class="btn btn-success">Nova postagem</button>
</a>
{{#each posts}}
  <div class="card mt-3">
    <div class="card-body">
      <h4>{{title}}</h4>
      <p>Descrição: {{description}}</p>
      <small>Data de postagem: {{date}}</small><br />
      <small>Categoria {{category.name}}</small>
      <div class="mt-2">
        <a href="/admin/posts/edit/{{_id}}">
          <button class="btn btn-warning">Editar</button>
        </a>
        <form action="/admin/posts/remove" method="post" class="d-inline">
          <input type="hidden" name="id" value="{{_id}}" />
          <button class="btn btn-danger">Apagar</button>
        </form>
      </div>
    </div>
  </div>
{{else}}
  <h4 class="mt-3">Nenhuma postagem registrada!</p>
{{/each}}