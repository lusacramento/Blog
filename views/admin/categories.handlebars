<h2>Lista de Categorias</h2>
<hr />
<a href="/admin/categories/add">
  <button class="btn btn-success">Nova categoria</button>
</a>
{{#each categories}}
  <div class="card mt-3">
    <div class="card-body">
      <h4>{{name}}</h4>
      <small>Slug: {{slug}}</small>
      <br />
      <small>Data de criação: {{date}}</small>
      <br />
      <div class="mt-2">
        <a href="/admin/categories/edit/{{_id}}">
          <button class="btn btn-warning">Editar</button>
        </a>
        <form action="/admin/categories/remove" method="post" class="d-inline">
          <input type="hidden" name="id" value="{{_id}}" />
          <button class="btn btn-danger">Apagar</button>
        </form>
      </div>
    </div>
  </div>
{{else}}
  <h4 class="mt-3">Nenhuma categoria registrada!</h4>
{{/each}}